@using System.Web.Optimization
@model OneSystemsChat.Models.User.UserLoginModel

@{
    ViewBag.Title = "Login Area";
}

@Scripts.Render("~/bundles/Content/Scripts/app/login")

<script>
    $(function () {
        viewModels.userLogin = new UserLogin();
        ko.applyBindings(viewModels.userLogin, document.getElementById('userLogin'));
    });
</script>

<div class="page-header">
    <h1>Login to the One Sytems Chat</h1>
</div>

<form>
    <div class="form-horizontal col-md-offset-2 col-md-10" id="userLogin">

        <div data-bind="visible: ErrorMessage">
            <div class="alert alert-danger" role="alert" data-bind="text: ErrorMessage"></div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Login: </label>
            <div class="col-md-5">
                <input type="text" class="form-control" data-bind="value: Login" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Password: </label>
            <div class="col-md-5">
                <input type="password" class="form-control" data-bind="value: Password" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Log In" class="btn btn-primary" data-bind="click: SubmitLogin, enable: Password && Login" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-5 col-md-offset-2">
                Do not have an account? <a href="@Url.Action("Register", "User")">Register now!</a>
            </div>
        </div>
    </div>    
</form>

