@using System.Web.Optimization
@model OneSystemsChat.Models.User.UserRegisterModel

@{
    ViewBag.Title = "Registration";
}

<form id="userRegistration">
    <div class="form-horizontal col-md-offset-2 col-md-10">
        
        <h2>REGISTRATION</h2>
        
        <hr />
        
        <div data-bind="visible: ErrorMessage">
            <div class="alert alert-danger" role="alert" data-bind="text: ErrorMessage"></div>
        </div>

        <div class="form-group">
            <label class="col-md-3">Login:</label>
            <div class="col-md-5">
                <input type="text" class="form-control" data-bind="value: Login" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3">Password:</label>
            <div class="col-md-5">
                <input type="password" class="form-control" data-bind="value: Password" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3">Confirm password:</label>
            <div class="col-md-5">
                <input type="password" class="form-control" data-bind="value: ConfirmPassword" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-5">
                <input type="submit" value="Register" class="btn btn-primary" data-bind="click: SubmitRegistration, enable: IsFieldsFilled" />
            </div>
        </div>
    </div>

</form>

@Scripts.Render("~/bundles/Content/Scripts/app/registration")

<script>
    $(function () {
        viewModels.userRegistration = new UserRegistration();
        ko.applyBindings(viewModels.userRegistration, document.getElementById('userRegistration'));
    });
</script>

